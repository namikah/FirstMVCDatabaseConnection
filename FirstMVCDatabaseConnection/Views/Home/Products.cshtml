
@{
    ViewData["Title"] = "Products";
}

<main style="background-color: antiquewhite; color: red; height: 100vh;">
    <h1>Products</h1>

    @model List<Product>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Count</th>
                <th scope="col">Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Count</td>
                    <td>@item.Category</td>
                </tr>
            }
        </tbody>
    </table>
</main>

